{% extends "target.default.j2" %}

{% block variables %}

ccflags = $ccflags $
    -target x86_64-elf $
    -isystem${srcroot}/src/include $
    -nostdlib $
    -nodefaultlibs $
    -fno-builtin $
    -mno-sse $
    -fno-omit-frame-pointer $
    -g $
    -ggdb

cxxflags = $cxxflags $
    -fno-exceptions $
    -fno-rtti

ldflags = $ldflags $
    -g $
    -ggdb $
    -nostdlib $
    -Bsymbolic $
    -nostartfiles $
    -Bstatic

{% endblock %}

